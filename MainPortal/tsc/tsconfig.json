{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
	  "outDir": "build"
  },
  "exclude": [
    "node_modules"
  ],
  "fileGlobs": [
        "./*.ts",
        "./app/*.ts",
        "./HBBABA/*.ts",
        "!./build/**"
    ]
}
